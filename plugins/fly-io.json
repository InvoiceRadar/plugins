{
  "$schema": "https://raw.githubusercontent.com/invoiceradar/plugins/main/schema.json",
  "id": "fly.io",
  "name": "Fly.io",
  "description": "Fly.io is a public cloud build for developers who ship.",
  "homepage": "https://fly.io",
  "configSchema": {
    "orgSlug": {
      "type": "string",
      "title": "Organization Slug",
      "required": true
    }
  },
  "checkAuth": [
    {
      "action": "navigate",
      "url": "https://fly.io/dashboard",
      "waitForNetworkIdle": true
    },
    {
      "action": "checkElementExists",
      "selector": "[href='/dashboard']"
    }
  ],
  "startAuth": [
    {
      "action": "navigate",
      "url": "https://fly.io/app/sign-in",
      "waitForNetworkIdle": true
    },
    {
      "action": "waitForElement",
      "selector": "[href='/dashboard']"
    }
  ],
  "getConfigOptions": [
    {
      "action": "navigate",
      "url": "https://fly.io/dashboard",
      "waitForNetworkIdle": true
    },
    {
      "action": "extract",
      "fields": {
        "label": "[aria-expanded] > div > div",
        "value": {
          "selector": "nav [href^='/dashboard/']",
          "attribute": "href",
          "transform": "(v) => v.split('/').pop()"
        }
      },
      "variable": "defaultOption"
    },
    {
      "action": "exposeOption",
      "config": "orgSlug",
      "option": "{{defaultOption}}"
    },
    {
      "action": "extractAll",
      "selector": "ul a[href^='/dashboard/']:not([href*='new-launch'])",
      "variable": "option",
      "fields": {
        "label": "li > div > div",
        "value": {
          "selector": "",
          "attribute": "href",
          "transform": "(v) => v.split('/').pop()"
        }
      },
      "forEach": [
        {
          "action": "exposeOption",
          "config": "orgSlug",
          "option": "{{option}}"
        }
      ]
    }
  ],
  "getDocuments": [
    {
      "action": "runSnippet",
      "snippet": "getInvoicesFromStripeBillingPortal",
      "args": {
        "url": "https://fly.io/organizations/{{config.orgSlug}}/billing_portal"
      }
    }
  ]
}
