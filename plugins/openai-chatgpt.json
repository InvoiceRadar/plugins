{
  "$schema": "https://raw.githubusercontent.com/invoiceradar/plugins/main/schema.json",
  "id": "openai-chatgpt",
  "name": "ChatGPT",
  "description": "Get invoices from your ChatGPT Plus subscription.",
  "homepage": "https://chatgpt.com/",
  "configSchema": {
    "username": {
      "type": "string",
      "title": "Username",
      "required": false
    }
  },
  "checkAuth": [
    {
      "action": "navigate",
      "url": "https://chatgpt.com/",
      "waitForNetworkIdle": true
    },
    {
      "action": "runJs",
      "script": "__remixContext.state.loaderData.root.clientBootstrap.authStatus === 'logged_in'"
    }
  ],
  "startAuth": [
    {
      "action": "navigate",
      "url": "https://chatgpt.com/"
    },
    {
      "action": "waitForElement",
      "selector": "[data-testid=login-button]"
    },
    {
      "action": "click",
      "selector": "[data-testid=login-button]"
    },
    {
      "action": "waitForElement",
      "selector": "[data-testid=profile-button]",
      "timeout": 120000
    }
  ],
  "getDocuments": [
    {
      "action": "navigate",
      "url": "https://chatgpt.com/"
    },
    {
      "action": "extract",
      "variable": "portalUrl",
      "script": "fetch('https://chatgpt.com/backend-api/payments/customer_portal', {\n  headers: {\n    authorization:\n      'Bearer ' +\n      window.__remixContext.state.loaderData.root.clientBootstrap.session\n        .accessToken,\n  },\n  referrer: 'https://chatgpt.com/',\n  method: 'GET',\n  mode: 'cors',\n  credentials: 'include',\n})\n  .then((r) => r.json())\n  .then((r) => r.url)"
    },
    {
      "action": "runSnippet",
      "snippet": "getInvoicesFromStripeBillingPortal",
      "args": {
        "url": "{{portalUrl}}"
      }
    }
  ]
}
