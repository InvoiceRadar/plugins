{
  "$schema": "https://raw.githubusercontent.com/invoiceradar/plugins/main/schema.json",
  "id": "cloudflare",
  "name": "Cloudflare",
  "description": "Cloudflare is an a global CDN and DNS provider",
  "homepage": "https://cloudflare.com",
  "configSchema": {
    "username": {
      "type": "string",
      "title": "Username",
      "required": false
    },
    "password": {
      "type": "password",
      "title": "Password",
      "required": false
    },
    "accountId": {
      "type": "string",
      "title": "Account ID",
      "required": true,
      "description": "You can find your Account ID in the URL. https://dash.cloudflare.com/YOUR_ACCOUNT_ID"
    }
  },
  "checkAuth": [
    {
      "action": "navigate",
      "url": "https://dash.cloudflare.com/login"
    },
    {
      "action": "waitForElement",
      "selector": "[data-testid='header']"
    },
    {
      "action": "checkElementExists",
      "selector": "[data-testid='user-selector-dropdown-button']"
    }
  ],
  "startAuth": [
    {
      "action": "navigate",
      "url": "https://dash.cloudflare.com/login"
    },
    {
      "action": "waitForElement",
      "selector": "[name='login-form']"
    },
    { "action": "type", "selector": "#email", "value": "{{config.username}}" },
    {
      "action": "type",
      "selector": "#password",
      "value": "{{config.password}}"
    },
    {
      "action": "waitForElement",
      "selector": "[data-testid='page-account-selector']",
      "timeout": 120000
    }
  ],
  "getConfigOptions": [
    {
      "action": "navigate",
      "url": "https://dash.cloudflare.com/"
    },
    {
      "action": "waitForElement",
      "selector": "[data-testid='page-account-selector'] ul li"
    },
    {
      "action": "extractAll",
      "selector": "[data-testid='page-account-selector'] ul li",
      "variable": "option",
      "fields": {
        "label": "div",
        "value": {
          "selector": "a",
          "attribute": "href",
          "transform": "(v) => v.split('/').pop()"
        }
      },
      "forEach": [
        {
          "action": "exposeOption",
          "config": "accountId",
          "option": "{{option}}"
        }
      ]
    }
  ],
  "getDocuments": [
    {
      "action": "navigate",
      "url": "https://dash.cloudflare.com/{{config.accountId}}/billing"
    },
    {
      "action": "waitForElement",
      "selector": "tbody tr"
    },
    {
      "action": "extractAll",
      "selector": "tbody tr",
      "variable": "invoice",
      "fields": {
        "id": {
          "selector": "td:nth-child(3) a > span:last-of-type"
        },
        "date": {
          "selector": "td:nth-child(1)"
        },
        "total": {
          "selector": "td:nth-child(4)"
        }
      },
      "forEach": [
        {
          "action": "click",
          "selector": "td:nth-child(3) a",
          "globalSelector": true
        },
        {
          "action": "waitForPdfDownload",
          "document": "{{invoice}}"
        }
      ]
    }
  ]
}
